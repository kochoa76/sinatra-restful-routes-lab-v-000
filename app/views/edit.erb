<h1> Edit recipe : </h1>

<%= @recipes %>

<form action="/recipes/edit" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label for="recipe_name"> Name: </label>
  <input id= "recipe_name" type="text" value="<% @recipe.name %>" name="name"><br>

  <label for ="recipe_ingredients"> Ingredients: </label>
  <input id="recipe_ingredients" type="text" value="<% @recipe.ingredients %>" name="ingredients"><br>

  <label for = "recipe_cook_time"> Cook Time: </label>
  <input id="recipe_cook_time" type="text" value="<% @recipe.cook_time %>" name="cook_time">
  <input type="submit" value="submit">
</form>
